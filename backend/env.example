# Server Configuration
# Note: On Heroku, PORT is set automatically. For local development use 5001
PORT=5001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database Configuration
# Note: On Heroku, use DATABASE_URL connection string instead
DB_HOST=localhost
DB_PORT=5432
DB_NAME=voluplan
DB_USER=postgres
DB_PASSWORD=your_database_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
# Note: Update callback URL to match your Heroku domain in production
GOOGLE_CALLBACK_URL=http://localhost:5001/api/auth/google/callback

# Facebook OAuth (Optional)
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
# Note: Update callback URL to match your Heroku domain in production
FACEBOOK_CALLBACK_URL=http://localhost:5001/api/auth/facebook/callback

# Email Configuration (for password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password_or_app_password
EMAIL_FROM="Voluplan <noreply@voluplan.com>"


