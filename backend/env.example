# Server Configuration
# Note: On Heroku, PORT is set automatically. For local development use 5001
PORT=5001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database Configuration
# Note: On Heroku, use DATABASE_URL connection string instead
DB_HOST=localhost
DB_PORT=5432
DB_NAME=voluplan
DB_USER=postgres
DB_PASSWORD=your_database_password

# JWT / Session Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
# Default expires is overridden by SESSION_MAX_AGE_HOURS if set
JWT_EXPIRES_IN=7d
# Session length in hours (used for JWT expiry and cookie maxAge)
SESSION_MAX_AGE_HOURS=8

# Rate Limiting (tune per environment)
# General API limit
GENERAL_RATE_WINDOW_MS=900000
GENERAL_RATE_MAX=2000
# Login rate limit
LOGIN_RATE_WINDOW_MS=900000
LOGIN_RATE_MAX=20
LOGIN_RATE_SKIP_SUCCESS=true
# Password reset rate limit
PWRESET_RATE_WINDOW_MS=3600000
PWRESET_RATE_MAX=5

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
# Note: Update callback URL to match your Heroku domain in production
GOOGLE_CALLBACK_URL=http://localhost:5001/api/auth/google/callback

# Facebook OAuth (Optional)
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
# Note: Update callback URL to match your Heroku domain in production
FACEBOOK_CALLBACK_URL=http://localhost:5001/api/auth/facebook/callback

# Email Configuration (for password reset)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password_or_app_password
EMAIL_FROM="Voluplan <noreply@voluplan.com>"


